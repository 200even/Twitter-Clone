@model IEnumerable<Twitter.Web.Models.Post>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_SimpleNavLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Text)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PostTime)
        </th>
        
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Text)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PostTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.User.UserName)
            </td>
            <td>
                @if (item.User.UserName == User.Identity.Name) { @Html.ActionLink("Edit", "Edit", new { id = item.PostId }); }
            </td>
            <td>
                @if (item.User.UserName == User.Identity.Name)
                { @Html.ActionLink("Delete", "Delete", new { id = item.PostId });
                }
            </td>
        </tr>
    }

</table>
